{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "leoecssaber-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/LeoEcsSaber/LeoEcsSaber.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "leoecssaber-clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/LeoEcsSaber/LeoEcsSaber.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "leoecssaber-publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/LeoEcsSaber/LeoEcsSaber.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "leoecssaber-watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/LeoEcsSaber/LeoEcsSaber.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}